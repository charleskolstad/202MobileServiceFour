@model _202MobileServiceFour_Model.LoginModel

@{
    ViewBag.Title = "ClientRegister";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row my-4">
        <div class="col-lg-5">
            <img class="img-fluid rounded" src="~/Assets/IMG/rawpixel-649916-unsplash.jpg" alt="">
        </div>
        <div class="col-lg-7">
            <h1>Business Name or Tagline</h1>
            <p>This is a template that is great for small businesses. It doesn't have too much fancy flare to it, but it makes a great use of the standard Bootstrap core components. Feel free to use this template for any project you want!</p>
            <br>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            @using (Html.BeginForm("ClientLogin", "Apps", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(false)

                <h3><i class="fa fa-hourglass-half" aria-hidden="true"></i> Login</h3><hr>

                <div class="form-group row">
                    <label for="txtYourName" class="col-3 col-form-label">User Name</label>
                    <div class="col-9">
                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control text-box single-line" } })
                    </div>
                </div>

                <div class="form-group row">
                    <label for="txtYourName" class="col-3 col-form-label">Password</label>
                    <div class="col-9">
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control text-box single-line" } )
                    </div>
                </div>

                <br>
                <input type="submit" class="btn btn-info pull-right" value="Next" />
            }
        </div>
    </div>
</div>

